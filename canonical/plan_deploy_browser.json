{
  "mova_version": "3.3.0",
  "id": "mova.recipes.deploy_browser",
  "description": "Deploy service and perform browser navigation",
  "policies": {
    "timeout_ms": 20000,
    "retry": {
      "max_attempts": 2,
      "strategy": "exp",
      "backoff_ms": [
        1000,
        2000
      ]
    },
    "budget_ms": 30000
  },
  "vars": {
    "service_name": "${service_name}",
    "url": "${url}"
  },
  "actions": [
    {
      "type": "emit_event",
      "channel": "mova.deploy_service",
      "payload": {
        "service_name": "${service_name}"
      }
    },
    {
      "type": "emit_event",
      "channel": "mova.browser_navigate",
      "payload": {
        "url": "${url}"
      }
    }
  ]
}