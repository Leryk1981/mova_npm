{
  "wersja": "3.3",
  "typ_ładunku": "application/ld+json",
  "$comment": "JSON-LD LocalBusiness: podstawowy profil SEO dla lokalnych firm.",
  "ładunek": {
    "@context": {
      "@vocab": "https://schema.org/",
      "@language": "pl"
    },
    "@type": "LocalBusiness",
    "name": "<BUSINESS_NAME>",
    "url": "<URL>",
    "logo": "<LOGO_URL>",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "<STREET_ADDRESS>",
      "addressLocality": "<ADDRESS_LOCALITY>",
      "addressRegion": "<ADDRESS_REGION>",
      "postalCode": "<POSTAL_CODE>",
      "addressCountry": "<ADDRESS_COUNTRY>"
    },
    "telephone": "<TELEPHONE>",
    "openingHours": [
      "<OPENING_HOURS_ARRAY>"
    ]
  },
  "akcje": [
    {
      "typ": "zapisać_plik",
      "ścieżka": "<OUT_FILE>",
      "wartość": "${payload}",
      "content_type": "application/ld+json",
      "$comment": "Lub na podstawie root typ_ładunku; zduplikowane dla jasności."
    },
    {
      "typ": "drukować",
      "wiadomość": "JSON-LD LocalBusiness zapisany w <OUT_FILE>"
    }
  ]
}