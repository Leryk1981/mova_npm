{
  "версія": "3.3",
  "$comment": "Telegram Bot: надсилання повідомлення користувачу/каналу.",
  "дії": [
    {
      "type": "отримати_секрет",
      "name": "<TELEGRAM_BOT_TOKEN_NAME>",
      "out": "vars.bot_token"
    },
    {
      "type": "http_запит",
      "invoke": "http:request",
      "payload": {
        "url": "https://api.telegram.org/bot${vars.bot_token}/sendMessage",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "chat_id": "<CHAT_ID>",
          "text": "<MESSAGE_TEXT>",
          "parse_mode": "<PARSE_MODE>",
          "disable_web_page_preview": "<DISABLE_PREVIEW>"
        },
        "result_in": "vars.telegram_response"
      }
    },
    {
      "type": "print",
      "message": "Telegram message sent (status: ${vars.telegram_response.__status})"
    }
  ]
}