{
  "mova_version": "3.3",
  "description": "Slack повідомлення до #general",
  "actions": [
    {
      "type": "http_request",
      "invoke": "http:request",
      "payload": {
        "url": "https://slack.com/api/chat.postMessage",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {env.SLACK_BOT_TOKEN}",
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "channel": "#general",
          "text": "Привіт командо"
        },
        "result_in": "vars.slack"
      }
    }
  ]
}
