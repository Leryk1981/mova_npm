{
  "mova_version": "3.3",
  "actions": [
    {
      "type": "http_request",
      "invoke": "http:request",
      "payload": {
        "url": "https://api.sendgrid.com/v3/mail/send",
        "method": "POST",
        "headers": {
          "Authorization": "Bearer {env.SENDGRID_TOKEN}",
          "Content-Type": "application/json"
        },
        "body": {
          "personalizations": [
            {
              "to": [
                {
                  "email": "bob@example.com"
                }
              ],
              "subject": "Зустріч"
            }
          ],
          "from": {
            "email": "no-reply@mova.dev",
            "name": "MOVA Automations"
          },
          "content": [
            {
              "type": "text/plain",
              "value": "Перенесено на 14:00"
            }
          ]
        }
      }
    }
  ]
}
