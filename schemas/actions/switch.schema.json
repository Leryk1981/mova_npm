{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "$id": "https://mova.org/schemas/actions/switch.schema.json",
  "title": "Action: Switch",
  "description": "Схема для дії, що виконує блок дій на основі значення.",
  "type": "object",
  "properties": {
    "type": { "const": "перемикач" },
    "invoke": { "const": "flow:switch" },
    "payload": {
      "type": "object",
      "properties": {
        "value": {},
        "cases": {
          "type": "object",
          "additionalProperties": { "$ref": "https://mova.org/schemas/envelope.3.3.schema.json#/properties/actions" }
        },
        "default": { "$ref": "https://mova.org/schemas/envelope.3.3.schema.json#/properties/actions" }
      },
      "required": ["value", "cases"]
    }
  },
  "required": ["type", "invoke", "payload"]
}