{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/actions/invoke.schema.json",
  "title": "Action: Invoke Plan",
  "description": "Схема для дії, що викликає інший план.",
  "type": "object",
  "properties": {
    "type": { "const": "invoke" },
    "invoke": { "const": "flow:invoke" },
    "payload": {
      "type": "object",
      "properties": {
        "plan_ref": { "type": "string" },
        "parameters": { "type": "object" },
        "result_in": { "type": "string" }
      },
      "required": ["plan_ref"]
    }
  },
  "required": ["type", "invoke", "payload"]
}
