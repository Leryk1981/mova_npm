{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/actions/set.schema.json",
  "title": "Action: Set Variable",
  "description": "Схема для дії, що встановлює значення змінної в контексті.",
  "type": "object",
  "properties": {
    "type": { "const": "set" },
    "invoke": { "const": "context:set" },
    "payload": {
      "type": "object",
      "properties": {
        "variable": { "type": "string" },
        "value": {}
      },
      "required": ["variable", "value"]
    }
  },
  "required": ["type", "invoke", "payload"]
}
