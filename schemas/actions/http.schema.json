{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/actions/http.schema.json",
  "title": "Action: HTTP Request",
  "description": "Схема для дії, що виконує HTTP-запит.",
  "type": "object",
  "properties": {
    "type": { "const": "http_request" },
    "invoke": { "const": "http:request" },
    "payload": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "format": "uri-template" },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"] },
        "headers": { "type": "object" },
        "body": {},
        "result_in": { "type": "string" }
      },
      "required": ["url", "method"]
    }
  },
  "required": ["type", "invoke", "payload"]
}
