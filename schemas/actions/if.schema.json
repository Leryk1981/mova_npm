 {
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/actions/if.schema.json",
  "title": "Action: if",
  "description": "Схема для умовного виконання блоку дій.",
  "type": "object",
  "required": ["type", "when", "then"],
  "properties": {
    "type": { "const": "if" },
    "name": { "type": "string" },
    "when": {
      "description": "Умова, яка має бути істинною для виконання блоку 'then'.",
      "oneOf": [
        { "type": "string" },
        { "type": "object" }
      ]
    },
    "then": {
      "description": "Блок дій, що виконується, якщо умова істинна.",
      "$ref": "https://mova.dev/schemas/core/envelope.3.3.schema.json#/properties/actions"
    },
    "else": {
      "description": "Блок дій, що виконується, якщо умова хибна.",
      "$ref": "https://mova.dev/schemas/core/envelope.3.3.schema.json#/properties/actions"
    },
    "save_as": { "type": "string" },
    "policies": { "$ref": "https://mova.dev/schemas/definitions/policies.schema.json" }
  },
  "additionalProperties": false
}