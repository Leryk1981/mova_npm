 {
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/actions/print.schema.json",
  "title": "Action: print",
  "description": "Схема для дії, що виводить повідомлення в стандартний вивід (stdout).",
  "type": "object",
  "required": ["type", "message"],
  "properties": {
    "type": { "const": "print" },
    "name": { "type": "string" },
    "message": { "oneOf": [ { "type": "string" }, { "type": "object" }, { "type": "array" } ] },
    "save_as": { "type": "string" },
    "policies": { "$ref": "../policies.schema.json" }
  },
  "additionalProperties": false
}