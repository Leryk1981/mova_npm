{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "title": "MOVA Plan",
  "description": "Канонічна схема для 'плану' MOVA.",
  "type": "object",
  "properties": {
    "mova_version": {
      "description": "Версія формату плану",
      "type": "string"
    },
    "actions": {
      "description": "Список дій, які потрібно виконати",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "description": "Унікальний ідентифікатор типу дії.",
            "type": "string"
          }
        },
        "required": ["type"]
      }
    }
  },
  "required": ["mova_version", "actions"]
}