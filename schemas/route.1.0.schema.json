{
  "$schema": "http://json-schema.org/draft-2020-12/schema",
  "$id": "https://mova.dev/schemas/route.1.0.schema.json",
  "title": "MOVA Route",
  "description": "Канонічна схема для 'маршруту' MOVA.",
  "type": "object",
  "properties": {
    "route_version": {
      "description": "Версія формату маршруту",
      "type": "string"
    },
    "trigger": {
      "description": "Опис тригера, що запускає маршрут",
      "type": "object"
    },
    "invoke": {
      "description": "Що саме викликається маршрутом",
      "type": "object",
      "properties": {
        "plan_ref": {
          "description": "Посилання на план, який потрібно виконати",
          "type": "string"
        }
      },
      "required": ["plan_ref"]
    }
  },
  "required": ["route_version", "trigger", "invoke"]
}