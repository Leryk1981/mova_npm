{
  "name": "mova",
  "version": "0.1.0",
  "description": "UA JSON Language for MOVA",
  "type": "module",
  "scripts": {
    "translate": "node scripts/translation/uk_to_en.mjs templates/ua",
    "translate:en-ua": "node scripts/translation/en_to_uk.mjs",
    "validate": "node scripts/validation/validate_schemas.mjs",
    "build": "npm run build:keys && npm run build:ua && npm run build:manifest && npm run check:lexicon",
    "run": "node scripts/runtime/run_plan.mjs",
    "run:plan": "npm run build:ua && npm run build:manifest && npm run run -- canonical/plan_min.json",
    "build:manifest": "node scripts/build/build_manifest.mjs > canonical/manifest.json",
    "build:keys": "node scripts/build/build_keys.mjs > build/canonical_keys.json",
    "lint:templates": "node scripts/validation/lint_templates.mjs templates/ua",
    "check:lexicon": "npm run build:keys && node scripts/validation/check_lexicon_coverage.mjs",
    "build:ua": "npm run lint:templates && npm run translate && npm run validate",
    "build:uk-schema": "node scripts/build/build_uk_schema.mjs",
    "build:fingerprint": "node scripts/build/build_schema_fingerprint.mjs",
    "cli": "node cli.mjs",
    "setup:dirs": "node scripts/setup_dirs.mjs",
    "ua:jsonld:demo": "node scripts/translation/uk_to_en.mjs templates/ua/envelope_jsonld_min.json templates/canonical/envelope_jsonld_min.canonical.json",
    "smoke:jsonld": "npm run ua:jsonld:demo && npm run validate"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
