{
  "version": "3.3",
  "type_charge": "application/ld+json",
  "$comment": "JSON-LD LocalBusiness: profil SEO de base pour les entreprises locales.",
  "charge": {
    "@context": {
      "@vocab": "https://schema.org/",
      "@language": "fr"
    },
    "@type": "LocalBusiness",
    "name": "<BUSINESS_NAME>",
    "url": "<URL>",
    "logo": "<LOGO_URL>",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "<STREET_ADDRESS>",
      "addressLocality": "<ADDRESS_LOCALITY>",
      "addressRegion": "<ADDRESS_REGION>",
      "postalCode": "<POSTAL_CODE>",
      "addressCountry": "<ADDRESS_COUNTRY>"
    },
    "telephone": "<TELEPHONE>",
    "openingHours": [
      "<OPENING_HOURS_ARRAY>"
    ]
  },
  "actions": [
    {
      "type": "écrire_fichier",
      "chemin": "<OUT_FILE>",
      "valeur": "${payload}",
      "content_type": "application/ld+json",
      "$comment": "Ou basé sur le type_charge root; dupliqué pour la clarté."
    },
    {
      "type": "imprimer",
      "message": "JSON-LD LocalBusiness enregistré dans <OUT_FILE>"
    }
  ]
}