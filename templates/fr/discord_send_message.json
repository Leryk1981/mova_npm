{
  "version": "3.3",
  "$comment": "Discord: envoyer un message via Incoming Webhook.",
  "actions": [
    {
      "type": "récupérer_secret",
      "name": "<DISCORD_WEBHOOK_SECRET_NAME>",
      "out": "vars.webhook"
    },
    {
      "type": "requête_http",
      "méthode": "POST",
      "url": "${vars.webhook}",
      "en_têtes": {
        "Content-Type": "application/json"
      },
      "corps": {
        "content": "<CONTENT>",
        "username": "<USERNAME>",
        "avatar_url": "<AVATAR_URL>"
      },
      "out": "vars.resp"
    },
    {
      "type": "imprimer",
      "message": "Discord accepté (statut dans vars.resp.__status)"
    }
  ]
}