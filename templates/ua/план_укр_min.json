{
  "версія": "3.3",
  "дії": [
    {
      "тип": "паралельно",
      "опис": "Виконати два HTTP-запити паралельно",
      "виклик": "flow:parallel",
      "навантаження": {
        "отримати_користувача": [
          { "тип": "http_запит", "виклик": "http:request", "навантаження": { "url": "https://jsonplaceholder.typicode.com/users/1", "метод": "GET", "результат_у": "userResponse" } }
        ],
        "отримати_пости": [
          { "тип": "http_запит", "виклик": "http:request", "навантаження": { "url": "https://jsonplaceholder.typicode.com/posts?userId=1", "метод": "GET", "результат_у": "postsResponse" } }
        ]
      }
    },
    {
      "тип": "встановити_змінну", "виклик": "context:set", "навантаження": { "змінна": "user", "значення": "{userResponse.body}" }
    },
    {
      "тип": "встановити_змінну", "виклик": "context:set", "навантаження": { "змінна": "posts", "значення": "{postsResponse.body}" }
    },
    {
      "тип": "друк_повідомлення",
      "опис": "Вивести фінальний результат після завершення паралельних задач",
      "виклик": "console:log",
      "навантаження": {
        "повідомлення": "Користувач {user.name} має {posts.length} постів."
      }
    }
  ]
}
