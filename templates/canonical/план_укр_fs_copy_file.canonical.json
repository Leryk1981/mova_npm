{
  "mova_version": "3.3",
  "id": "mova.recipes.fs_copy_file",
  "policies": {
    "timeout_ms": 8000,
    "retry": {
      "max_attempts": 1
    }
  },
  "vars": {
    "src_path": "${src_path}",
    "dst_path": "${dst_path}"
  },
  "actions": [
    {
      "type": "emit_event",
      "channel": "mova.file_read",
      "payload": {
        "path": "${src_path}"
      }
    },
    {
      "type": "emit_event",
      "channel": "mova.file_write",
      "payload": {
        "path": "${dst_path}",
        "content": "${content}"
      }
    }
  ]
}