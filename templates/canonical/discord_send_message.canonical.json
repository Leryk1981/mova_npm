{
  "mova_version": "3.3",
  "$comment": "Discord: wysłać wiadomość przez Incoming Webhook.",
  "actions": [
    {
      "type": "secrets.get",
      "name": "<DISCORD_WEBHOOK_SECRET_NAME>",
      "out": "vars.webhook"
    },
    {
      "type": "http_request",
      "method": "POST",
      "url": "${vars.webhook}",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "content": "<CONTENT>",
        "username": "<USERNAME>",
        "avatar_url": "<AVATAR_URL>"
      },
      "out": "vars.resp"
    },
    {
      "type": "print",
      "message": "Discord zaakceptował (status w vars.resp.__status)"
    }
  ]
}