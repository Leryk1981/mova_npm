{
  "mova_version": "3.3.0",
  "payload_media_type": "application/ld+json",
  "$comment": "JSON-LD LocalBusiness: базовий SEO профіль локального бізнесу.",
  "payload": {
    "@context": {
      "@vocab": "https://schema.org/",
      "@language": "uk"
    },
    "@type": "LocalBusiness",
    "name": "MOVA Bakery",
    "url": "https://mova.example.com",
    "logo": "https://mova.example.com/logo.png",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "123 Main St",
      "addressLocality": "Kyiv",
      "addressRegion": "Kyiv Oblast",
      "postalCode": "01001",
      "addressCountry": "UA"
    },
    "telephone": "+380441234567",
    "openingHours": [
      "Mo-Fr 09:00-18:00"
    ]
  },
  "actions": [
    {
      "type": "file_write",
      "path": "dist/seo/localbusiness.jsonld",
      "data": "${payload}"
    },
    {
      "type": "print",
      "message": "JSON-LD LocalBusiness збережено"
    }
  ]
}