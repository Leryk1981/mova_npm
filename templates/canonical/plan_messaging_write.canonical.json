{
  "mova_version": "3.3",
  "id": "mova.recipes.messaging_write",
  "description": "Send message and write document",
  "policies": {
    "timeout_ms": 15000,
    "retry": {
      "max_attempts": 1
    },
    "dlq": {
      "enabled": true,
      "target": "dlq.messaging"
    }
  },
  "vars": {
    "topic": "${topic}",
    "payload": "${payload}",
    "content": "${content}",
    "format": "${format}"
  },
  "actions": [
    {
      "type": "emit_event",
      "channel": "mova.send_message",
      "payload": {
        "topic": "${topic}",
        "payload": "${payload}"
      }
    },
    {
      "type": "emit_event",
      "channel": "mova.write_document",
      "payload": {
        "content": "${content}",
        "format": "${format}"
      }
    }
  ]
}