{
  "mova_version": "3.3",
  "actions": [
    {
      "type": "secrets.get",
      "name": "STRIPE_API_KEY",
      "out": "stripe_key"
    },
    {
      "type": "http_request",
      "invoke": "http:request",
      "payload": {
        "url": "https://api.stripe.com/v1/payment_intents",
        "method": "POST",
        "headers": {
          "Authorization": "",
          "Content-Type": "application/x-www-form-urlencoded"
        },
        "body": "amount=&currency=&description="
      },
      "headers": {
        "Authorization": {
          "$secret": "STRIPE_API_KEY",
          "as": "bearer"
        }
      },
      "body": "Test order"
    }
  ]
}